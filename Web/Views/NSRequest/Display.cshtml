@model Domain.Entities.Requests;
@using Domain.Entities;

 
    <div class="row">
        <div class="col-6">
            <div class="block block-rounded mb-0">
            <div class="block-content block-content-full">
              <div class="py-3 text-center">
                <h1 class="h3 fw-extrabold mb-1">
                  @Model.requestType.Name
                </h1>
                <h2 class="fs-sm fw-medium text-muted mb-0">
                  Request Type
                </h2>
              </div>
            </div>
            </div>
        </div>
        <div class="col-6">
            <div class="block block-rounded mb-0">
            <div class="block-content block-content-full">
              <div class="py-3 text-center">
                    @if (Model.Status == RequestStatus.CREATED)
                    {
                        <h1 class="h3 fw-extrabold mb-1 text-primary">
                            @RequestStatus.CREATED
                        </h1>
                    } else if (Model.Status == RequestStatus.PROCESSING)
                    {
                        <h1 class="h3 fw-extrabold mb-1 text-warning">
                            @RequestStatus.PROCESSING
                        </h1>

                    }else if (Model.Status == RequestStatus.COMPLETED)
                    {
                         <h1 class="h3 fw-extrabold mb-1 text-success">
                            @RequestStatus.COMPLETED
                         </h1>
                    } 

                <h2 class="fs-sm fw-medium text-muted mb-0">
                 Status
                </h2>
              </div>
            </div>
            </div>
        </div>
       
    </div>
<div class="row my-4">
    <div class="col-6">
         <div class="block block-rounded">
             <div class="block-header block-header-default">
              <h3 class="block-title">Sub Request</h3>
              <div class="block-options">
                 
              </div>
            </div>
            <div class="block-content">
                <ol>
                    @foreach (var request in Model.subRequestTypes)
                    {
                        <li>@request.Name</li>
                    }
                </ol>
            </div>
          </div>
    </div>
 
    <div class="col-6">
         <div class="block block-rounded">
             <div class="block-header block-header-default">
              <h3 class="block-title">Request Inputs</h3>
              <div class="block-options">
               
              </div>
            </div>
            <div class="block-content">
                <ol>
                    @foreach (var input in Model.requestInputs)
                    {
                        <li>@input.input</li>
                    }
 
                </ol>
            </div>
          </div>
    </div>
 
</div>

<div class="row">
    <div class="col-12">
        <div>
            <div class="block block-rounded">
                <div class="block-header block-header-default">
                <h3 class="block-title">Response Files</h3>
            </div>
            <div class="block-content">
              
            </div>
        </div>
    </div>
</div>