<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Web</title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Web.styles.css"  />
    <script src="https://cdn.tailwindcss.com" ></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            // clifford: '#da373d',
          }
        }
      }
    }
  </script>

  <style>
       @await RenderSectionAsync("Styles", required: false)
  </style>
</head>
<body>

    <header>
    
<nav class="bg-gray-50 dark:bg-red-700">
    <div class="max-w-screen-xl px-4 py-3 mx-auto">
        <div class="flex items-center">
            <ul class="flex flex-row font-medium mt-0 space-x-8 rtl:space-x-reverse text-sm">
                 <li class="">
                            <a class="text-black bold dark:text-white hover:underline" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                 </li>
                 <li class="">
                            <a class="text-black bold dark:text-white hover:underline" asp-area="" asp-controller="Employees" asp-action="Index">Employees</a>
                 </li>
                 <li class="">
                            <a class="text-black bold dark:text-white hover:underline" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                 </li>
            </ul>
        </div>
    </div>
</nav> 
    </header>
    <div class="container">
        <main role="main" class="pb-10 mb-10">
            @RenderBody()
        </main>
    </div>

   
    <footer class="border-top footer text-muted ">
        <div class="container">
            &copy; 2024 - Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
   <!-- <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
   
</body>
</html>
